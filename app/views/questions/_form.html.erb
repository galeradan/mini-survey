
<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :question %>
    <%= f.input :guide %>
    <%= f.input :field_type %>
    <%= f.input :required %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
